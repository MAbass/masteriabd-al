RewriteEngine On

RewriteCond "%{REQUEST_URI}" "categorie"
RewriteRule categorie/([0-9]+) index.php?action=categorie&id=$1

RewriteCond "%{REQUEST_URI}" "article"
RewriteRule article/([0-9]+) index.php?action=article&id=$1

RewriteCond "%{REQUEST_URI}" "login"
RewriteRule login index.php?action=login

RewriteCond "%{REQUEST_URI}" "user"
RewriteRule user/?([0-9]+)?/?(.*)? index.php?action=user&id=$1&type=$2





